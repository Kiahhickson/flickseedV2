<!DOCTYPE html>
<html>
<head>
  <title>FlickseedV2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<!-- NAVIGATION BAR -->
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Flickseed</a>

    </div>
      
      <ul class="nav navbar-nav navbar-right">
        <% if @current_founder.present? %> 
          <ul> 
            <li><%= @current_founder.email_address %></li> 
            <li><%= link_to "Log out", '/founder_logout', method: "delete" %></li> 
            <li><%= link_to "My profile", '#' %></li> 
          </ul> 
        <% elsif @current_investor.present? %> 
          <ul> 
            <li><%= @current_investor.email_address %></li> 
            <li><%= link_to "Log out", '/investor_logout', method: "delete" %></li>
            <li><%= link_to "My profile", investor_path(@current_investor) %></li> 
            <li><%= link_to "Favourites", favourites_path %></li> 
          </ul> 
        <% else %>       
          <ul> 
            <li><%= link_to "Investor Login", '/login' %></a></li> 
            <li><%= link_to "Investor Signup", '/investor_signup' %></a></li> 
          </ul> 
        <% end %>       
        </div>
      </ul>
  </div><!-- /.container-fluid -->
</nav>

<!-- END NAVAGATION BAR -->

  <%= yield %>

</body>
</html>